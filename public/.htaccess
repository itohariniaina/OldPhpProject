# Activation du moteur de réécriture
RewriteEngine On

# Conditions de réécriture (ne pas réécrire si le fichier ou dossier existe)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Règle de réécriture principale
RewriteRule ^(.*)$ index.php?route=$1 [QSA,L]

# Protéger les fichiers sensibles
<FilesMatch "(\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Empêcher la navigation dans les répertoires
Options -Indexes

# Définir l'encodage par défaut
AddDefaultCharset UTF-8

# Augmenter les limites PHP pour le traitement des images volumineuses
php_value upload_max_filesize 20M
php_value post_max_size 20M
php_value memory_limit 256M
php_value max_execution_time 300 
